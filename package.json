{
  "name": "funktx",
  "version": "0.1.0",
  "description": "helper functions, basic types, and essentials; FP style",
  "main": "dist/bundle.cjs.js",
  "module": "dist/bundle.esm.js",
  "browser": "dist/bundle.umd.js",
  "repository": "git@github.com:shahabkhalvati/funktx.git",
  "author": "Shahab Khalvati <contact@shahabkhalvati.com>",
  "license": "MIT",
  "keywords": [
    "template",
    "node",
    "module"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "watch 'npm run build' src",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "coverage": "npm run test -- --coverage",
    "coverage:ci": "npm run test -- --coverage --coverageReporters=text-lcov | coveralls",
    "prepublishOnly": "npm run build",
    "release": "np"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.10",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "babel-jest": "^28.1.3",
    "coveralls": "^3.1.1",
    "eslint": "^8.20.0",
    "fast-check": "^3.1.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "np": "^7.6.2",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "rollup": "^2.77.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-filesize": "^9.1.2",
    "rollup-plugin-terser": "^7.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
